  }
  else if (!$nid)
    $nid = ($_POST['nid'] > 0) ? $_POST['nid'] : ((arg(2) > 0) ? arg(2) : arg(1));
  if (is_numeric($nid) && ($nid > 0)) {
    if (!$ride)
