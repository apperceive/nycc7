    'description' => 'Used to hold credit transactions',
    'fields' => array(
      'id' => array(
        'type' => 'serial',
        'description' => 'The unique ID (primary)',
        'not null' => TRUE,
        'disp-width' => '11',
      ),
      'uid' => array(
        'description' => t('The user id'),
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'created' => array(
        'description' => t('The timestamp for this transaction'),
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'expiration' => array(
        'description' => t('The expiration timestamp for this transaction'),
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'credits' => array(
        'description' => t('The number of credits added or subtracted'),
        'type' => 'int',
        'unsigned' => FALSE,
        'not null' => TRUE,
