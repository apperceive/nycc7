<?php

/**
 * @file
 * MS Credits Install File
 */

 /**
 * Implements hook_install().
 */
function ms_credits_install() {
  drupal_install_schema('ms_credits');
}

/**
 * Implements hook_uninstall().
 */
function ms_credits_uninstall() {
  drupal_uninstall_schema('ms_credits');
  // Delete related variables all at once.
  db_query("DELETE FROM {variable} WHERE name LIKE 'ms_credits_%%'");
}

/**
 * Implements hook_schema().
 */
